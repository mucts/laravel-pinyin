{
    "name": "mucts/laravel-pinyin",
    "description": "Chinese to Pinyin translator.",
    "type": "library",
    "keywords": [
        "laravel",
        "pinyin"
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "^7.4",
        "ext-openssl": "^7.4",
        "ext-gmp": "^7.4",
        "ext-bcmath": "^7.4",
        "laravel/framework": "^7.0",
        "mucts/pinyin": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "MuCTS\\LaravelPinyin\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "license": "MIT",
    "authors": [
        {
            "name": "herry",
            "email": "yuandeng@aliyun.com"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "MuCTS\\LaravelPinyin\\Providers\\PinyinServiceProvider"
            ],
            "aliases": {
                "Snowflake": "MuCTS\\LaravelPinyin\\Facades\\Pinyin"
            }
        }
    }
}
